<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_send_transaction"
        tools:context=".SendTransactionActivity">

    <TextView
            android:id="@+id/text3"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="90dp" android:text="@string/hold_card_payment"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:layout_marginTop="33dp"
            android:layout_marginStart="10dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:id="@+id/recipientAddress"
                android:text="0xa8e5590D3E1377BAfac30d3D3AB5779A62e0FF28"
                android:textSize="14sp" android:hint="@string/recipient_address"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="126dp" android:layout_marginStart="12dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/amount" android:text="0.03"
                android:inputType="numberDecimal" android:hint="@string/amount_eth"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="203dp" android:layout_marginStart="14dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gasPrice" android:text="50" android:inputType="numberDecimal"
                android:hint="@string/gas_price"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" android:layout_marginStart="13dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gasLimit" android:text="21000"
                android:inputType="numberDecimal" android:hint="@string/gas_limit"/>
    </android.support.design.widget.TextInputLayout>
    <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/progressBar" android:layout_centerHorizontal="true" android:layout_marginBottom="21dp"/>
    <ImageButton
            android:layout_width="55dp"
            android:layout_height="49dp"
            android:id="@+id/scanQr" android:layout_alignParentEnd="true"
            android:src="@drawable/qrcode" android:scaleType="fitCenter" android:onClick="scanQrCode"
            android:layout_alignParentTop="true" android:layout_marginTop="36dp"/>
    <TextView
            android:text="Price: -€\n Tx Fee: -€"
            android:layout_width="385dp"
            android:layout_height="61dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="185dp" android:id="@+id/priceInEuro" android:layout_alignParentStart="true"
            android:layout_marginStart="12dp" android:textSize="18sp" android:textAlignment="center"/>
</RelativeLayout>