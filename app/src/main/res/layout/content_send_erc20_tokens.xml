<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_send_erc20_tokens"
        tools:context=".SendErc20TokensActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_margin="30px" android:gravity="center">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/contract_address"
                    android:text="0xd5ffaa5d81cfe4d4141a11d83d6d7aada39d230e"
                    android:textSize="14sp" android:id="@+id/contractAddress" android:enabled="false"/>
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_weight=".90">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/recipientAddress"
                        android:text="0xa8e5590D3E1377BAfac30d3D3AB5779A62e0FF28"
                        android:textSize="14sp" android:hint="@string/recipient_address"/>
            </android.support.design.widget.TextInputLayout>
            <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="47dp"
                    android:id="@+id/scanQr" android:layout_alignParentEnd="true"
                    android:src="@drawable/qrcode" android:scaleType="fitCenter" android:onClick="scanQrCode"
                    android:layout_alignParentTop="true" android:layout_weight=".10"/>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/amount" android:text="1"
                    android:inputType="numberDecimal" android:hint="@string/token_amount"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
        >

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gasPrice" android:text="1" android:inputType="numberDecimal"
                    android:hint="@string/gas_price"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
        >

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gasLimit" android:text="54286"
                    android:inputType="numberDecimal" android:hint="@string/gas_limit"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
                android:text="@string/current_token_balance_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:id="@+id/currentBalance" android:layout_alignParentTop="true"
                android:textAlignment="center"/>
        <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:id="@+id/progressBar" android:layout_centerHorizontal="true"
        />
        <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:text="@string/hold_card_payment" android:layout_above="@+id/progressBar"/>
    </LinearLayout>
</RelativeLayout>