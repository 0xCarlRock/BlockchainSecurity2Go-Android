<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChangePinActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="643dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp"
            android:textAlignment="center" android:gravity="center">
        <TextView
                android:text="Enter old and new PIN:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="24sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/oldPin" android:hint="Old PIN"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/newPin" android:hint="New PIN"/>
        <ImageView
                android:id="@+id/image_nfc_icon"
                android:layout_width="117dp"
                android:layout_height="68dp" app:srcCompat="@drawable/nfc_icon"/>
        <TextView
                android:id="@+id/holdCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hold_card"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center_horizontal"
        />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>